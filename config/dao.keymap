        num {
            bindings = <
&trans      &kp EQUAL        &kp N7  &kp N8  &kp N9  &kp N0         &trans  &trans     &trans     &trans    &trans    &trans
&caps_word  &kp KP_PLUS      &kp N4  &kp N5  &kp N6  &kp KP_MINUS   &trans  &kp RSHFT  &kp RCTRL  &kp RGUI  &kp RALT  &trans
&kp KP_DOT  &kp KP_ASTERISK  &kp N1  &kp N2  &kp N3  &kp KP_DIVIDE  &trans  &trans     &trans     &trans    &trans    &trans
                                     &trans  &trans  &trans         &trans  &mo 5      &trans
            >;
        };

        sys {
            bindings = <
&trans  &kp LA(F4)      &kp LG(LC(LEFT))  &kp LG(UP)      &kp LG(LC(RIGHT))  &kp LC(LA(TAB))  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &kp F2          &kp LG(LEFT)      &kp LG(DOWN)    &kp LG(RIGHT)      &sl 6            &trans  &trans  &trans  &trans  &trans  &trans
